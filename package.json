{
  "name": "unicef-giga-api",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "node ace serve --watch",
    "build": "node ace build --production --ignore-ts-errors",
    "start": "node server.js",
    "lint": "eslint . --ext=.ts",
    "format": "prettier --write ."
  },
  "eslintConfig": {
    "extends": [
      "plugin:adonis/typescriptApp",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error"
      ]
    }
  },
  "eslintIgnore": [
    "build"
  ],
  "prettier": {
    "trailingComma": "es5",
    "semi": false,
    "singleQuote": true,
    "useTabs": false,
    "quoteProps": "consistent",
    "bracketSpacing": true,
    "arrowParens": "always",
    "printWidth": 100
  },
  "devDependencies": {
    "@adonisjs/assembler": "^5.8.0",
    "@japa/api-client": "^1.3.1",
    "@japa/assert": "^1.3.4",
    "@japa/expect": "^1.1.4",
    "@japa/preset-adonis": "^1.0.16",
    "@japa/runner": "^2.0.8",
    "@types/uuid": "^8.3.4",
    "adonis-preset-ts": "^2.1.0",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-adonis": "^2.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "nock": "^13.2.9",
    "pino-pretty": "^7.6.1",
    "prettier": "^2.6.2",
    "typescript": "~4.6",
    "youch": "^3.2.0",
    "youch-terminal": "^2.1.4"
  },
  "dependencies": {
    "@adonisjs/auth": "^8.2.1",
    "@adonisjs/core": "^5.8.2",
    "@adonisjs/lucid": "^18.0.0",
    "@adonisjs/repl": "^3.1.11",
    "@azure/storage-blob": "^12.10.0",
    "@gnosis.pm/safe-core-sdk": "^2.3.2",
    "@gnosis.pm/safe-core-sdk-types": "^1.4.0",
    "@gnosis.pm/safe-ethers-lib": "^1.4.0",
    "@gnosis.pm/safe-service-client": "^1.2.0",
    "axios": "^0.27.2",
    "ethers": "^5.7.0",
    "luxon": "^2.4.0",
    "luxon-business-days": "^2.8.3",
    "pg": "^8.7.3",
    "phc-argon2": "^1.1.3",
    "proxy-addr": "^2.0.7",
    "reflect-metadata": "^0.1.13",
    "source-map-support": "^0.5.21",
    "uuid": "^8.3.2"
  },
  "resolutions": {
    "glob-parent": "^6.0.2"
  }
}
