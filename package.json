{
  "name": "unicef-giga-api",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "server": "node ace serve --watch",
    "dev": "concurrently \"node ace serve --watch\" \"npm run scheduler\"",
    "start": "node build\\server.js",
    "scheduler": "node ace scheduler:run",
    "build": "node ace build --production --ignore-ts-errors",
    "serve": "node ace serve",
    "lint": "eslint . --ext=.ts",
    "lint:fix": "eslint --fix --ext .ts .",
    "prettier": "prettier --write ./**/*.{js,ts,md,json}",
    "clear-all": "rm -rf build node_modules",
    "deploy:safe": "PRIVATE_KEY=$npm_config_private_key NAME=$npm_config_name node ace deploy:safe",
    "add:user_safe": "NODE_ENV=$npm_config_env EMAIL=$npm_config_email node ace add:user_safe",
    "precommit": "yarn prettier && yarn lint:fix",
    "clean-branches-windows": "git branch | %{ $_.Trim() } | ?{ $_ -ne 'master' } | ?{ $_ -ne 'release'} | %{ git branch -D $_ }",
    "clean-branches-linux": "git for-each-ref --format '%(refname:short)' refs/heads | grep -v 'master\\|main' | xargs git branch -D"
  },
  "engines": {
    "node": ">=16.0.0 <17.0.0"
  },
  "eslintConfig": {
    "extends": [
      "plugin:adonis/typescriptApp",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error"
      ]
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "eslintIgnore": [
    "build"
  ],
  "prettier": {
    "trailingComma": "none",
    "semi": false,
    "singleQuote": true,
    "useTabs": false,
    "quoteProps": "consistent",
    "bracketSpacing": true,
    "arrowParens": "always",
    "printWidth": 100,
    "tabWidth": 2
  },
  "pre-commit": [
    "precommit"
  ],
  "devDependencies": {
    "@adonisjs/assembler": "^5.9.5",
    "@adonisjs/ignitor": "^2.0.8",
    "@japa/api-client": "^1.3.1",
    "@japa/assert": "^1.3.4",
    "@japa/expect": "^1.1.4",
    "@japa/preset-adonis": "^1.0.16",
    "@japa/runner": "^2.0.8",
    "@types/node": "^20.4.2",
    "@types/node-cron": "^3.0.7",
    "@types/uuid": "^8.3.4",
    "adonis-preset-ts": "^2.1.0",
    "concurrently": "^8.2.0",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-adonis": "^2.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "nock": "^13.2.9",
    "pre-commit": "^1.2.2",
    "prettier": "^2.6.2",
    "typescript": "~4.6",
    "youch": "^3.2.0",
    "youch-terminal": "^2.1.4"
  },
  "dependencies": {
    "@adonisjs/auth": "^8.2.2",
    "@adonisjs/core": "^5.9.0",
    "@adonisjs/lucid": "^18.3.0",
    "@adonisjs/repl": "^3.1.11",
    "@azure/storage-blob": "^12.10.0",
    "@safe-global/api-kit": "^1.3.0",
    "@safe-global/protocol-kit": "^1.2.0",
    "@safe-global/safe-core-sdk-types": "^2.2.0",
    "adonis-request-throttler": "^2.0.3",
    "adonis5-jwt": "^1.1.7",
    "adonis5-scheduler": "^2.0.2",
    "axios": "^0.27.2",
    "ethers": "^5.7.0",
    "handlebars": "^4.7.7",
    "jsonwebtoken": "^9.0.1",
    "luxon": "^3.3.0",
    "luxon-business-days": "^3.0.1",
    "node-cache": "^5.1.2",
    "node-cron": "^3.0.2",
    "nodemailer": "^6.9.3",
    "pg": "^8.7.3",
    "phc-argon2": "^1.1.3",
    "pino-pretty": "^10.0.1",
    "proxy-addr": "^2.0.7",
    "reflect-metadata": "^0.1.13",
    "source-map-support": "^0.5.21",
    "uuid": "^8.3.2",
    "yarn": "^1.22.19"
  },
  "resolutions": {
    "glob-parent": "^6.0.2"
  }
}
